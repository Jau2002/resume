---
interface Props {
	title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	*,
	*::before,
	*::after {
		margin: 0;
		padding: 0;
		border: 0;
		box-sizing: border-box;
		vertical-align: baseline;
	}

	html {
		font-family:
			Menlo,
			'Courier New',
			Monaco,
			Lucida Console,
			Courier,
			monospace;
		background: #fff;
		letter-spacing: -0.025rem;
		scroll-behavior: smooth;
	}

	svg {
		width: 100%;
		display: block;
		fill: currentcolor;
	}

	a {
		display: block;
		text-decoration: none;
		color: inherit;
		font-size: inherit;
		display: inline;
	}

	body,
	figure {
		margin: 0;
		padding: 0;
	}

	a {
		text-decoration: none;
	}

	ul {
		list-style: none;
		margin: 0;
		padding: 0;
	}

	li {
		list-style-type: none;
	}

	html {
		scroll-behavior: smooth;
	}

	h1,
	h2,
	h3,
	h4 {
		margin: 0;
		font-family:
			system-ui,
			-apple-system,
			BlinkMacSystemFont,
			'Segoe UI',
			Roboto,
			Oxygen,
			Ubuntu,
			Cantarell,
			'Open Sans',
			'Helvetica Neue',
			sans-serif;
	}

	p {
		color: #666;
		font-size: 0.9rem;
		line-height: 1.5;
		margin: 0;
		text-wrap: pretty;
		display: inline;
	}

	astro-dev-toolbar {
		display: none !important;
	}
</style>
